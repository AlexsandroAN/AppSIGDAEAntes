<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TxtLabel">
        <item name="android:color">@color/preto</item>
        <item name="android:textSize">@dimen/txt_label</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TxtAtributo">
        <item name="android:color">@color/preto</item>
        <item name="android:textSize">@dimen/txt_atributo</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="TxtAtributoCentralizado">
        <item name="android:textSize">@dimen/txt_atributo_titulo</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>

    <style name="styleEditTextLogin">
        <item name="android:background">@color/branco</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
