<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.gov.ce.appsigdae.Login">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/fundo13"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:layout_width="290dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:src="@drawable/logo_dae_branco" />


        <EditText
            android:id="@+id/edtUsuario"
            style="@style/styleEditTextLogin"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rectangle_background"
            android:drawableLeft="@drawable/user_32"
            android:hint="@string/usuarioHint"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtSenha"
            style="@style/styleEditTextLogin"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:background="@drawable/rectangle_background"
            android:drawableLeft="@drawable/padlock_32"
            android:hint="@string/senhaHint"
            android:inputType="numberPassword" />

        <Button
            android:id="@+id/btnLogar"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rectangle_background_button"
            android:text="@string/btn_entrar"
            android:textColor="@color/preto" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
